---
import { Icon } from "astro-icon/components";
---

<style>
  @font-face {
    font-family: "Westway"; /* Nom que vous souhaitez donner à votre police */
    src: url("https://hubgames.studio/content/ressources/Westway.ttf")
      format("truetype"); /* Remplacez par le chemin correct vers votre police TTF */
    font-weight: normal;
    font-style: normal;
  }
  @media screen and (max-width: 390px) {
    #affiche390 {
      display: none;
    }
  }
  @media screen and (min-width: 391px) {
    #affiche-390 {
      display: none;
    }
    #affiche390 {
      display: block;
    }
  }
  @media screen and (max-width: 625px) {
    #affiche625 {
      display: none;
    }
  }
  @media screen and (min-width: 626px) {
    #affiche-625 {
      display: none;
    }
    #affiche625 {
      display: block;
    }
  }
</style>
